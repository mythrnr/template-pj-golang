root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = space

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.{html,js,json,jsx,proto,scss,sh,sql,toml,ts,tsx,vue,xml,yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
